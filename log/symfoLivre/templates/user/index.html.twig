{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Index / Utilisateurs</h1>

    
    
    
<div class="container">
	<!-- User main content -->
	<user class="col-md-12 maincontent">
		<div class="container">
			<div class="row">
				<h3>Les users</h3>
				<hr style="width:100%; height:10px; background-color:#1B4F72 ">
				<table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>NomUser</th>
                            <th>MailUser</th>
                            <th>password</th>
                            <th>RoleUser</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nomUser }}</td>
                            <td>{{ user.mailUser }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.roleUser }}</td>
                            <td>
                                <a href="{{ path('app_user_show', {'id': user.id}) }}"  class="btn btn-primary" >afficher /</a>
                                                    <th><a href="{{path('app_user_edit', {'id': user.id})}}"  class="btn btn-dark"> Editer</a>  </th>
                                        
                                    <th>{{ include('user/_delete_form.html.twig') }}   </th>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <a href="{{ path('app_user_new') }}"  class="btn btn-info" > Creer un Utilisateur</a>
{% endblock %}
