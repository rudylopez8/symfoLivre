{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello! âœ…</h1>
</div>
<div
	class="container">
	<!-- User main content -->
	<user class="col-md-12 maincontent">
		<div class="container">
			<div class="row">
				<h3>Les users</h3>
				<hr style="width:100%; height:10px; background-color:#1B4F72 ">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Action</th>
						</tr>
					</thead>

					<tbody>
						{% for user in users %}
							<tr>
								<td>

									{{user.id}}
									{{user.nomUser}}
								</td>
								<td>
                                    <th><a href="{{path('user_display', {'id': user.id} ) }}" class="btn btn-dark"> Affichage</a> </th>
                                    <th><a href="{{path('user_edit', {'id': user.id} ) }}" class="btn btn-dark"> Edit</a> </th>
                                    <th>{{ include('user/_delete_form.html.twig') }}   </th>


								</td>

							</tr>

						{% endfor %}

					</tbody>
				</table>

			</div>
		</div>
	</user>
</div>

{% endblock %}
